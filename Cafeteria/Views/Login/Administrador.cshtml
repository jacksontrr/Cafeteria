@model Cafeteria.ViewModels.UsuarioViewModel
@{
    ViewBag.Title = "Login";
}
<div class="container center-div">
    <div class="card">
        <div class="card-body">
            <a class="btn btn-brown btn-circle btn-absolute-end" asp-action="Index" asp-controller="Login" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="Cliente"><i class="fas fa-user"></i></a>
            <div class="logo-div">
                <img src="~/images/logo.png" class="logo" />
            </div>
            <form asp-controller="Login" asp-action="Administrador" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Senha"></label>
                    <input asp-for="Senha" type="password" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="d-flex mt-2 justify-content-between">
                    <a class="btn btn-light" asp-action="Index" asp-controller="/">Voltar</a>
                    <button type="submit" class="btn btn-brown">Login</button>
                </div>

            </form>

        </div>
    </div>
</div>