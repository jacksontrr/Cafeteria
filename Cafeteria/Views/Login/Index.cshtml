@model Cafeteria.ViewModels.UsuarioViewModel
@{
    ViewBag.Title = "Login";
}
<div class="container center-div">
    <div class="card">
        <div class="card-body">
            <div class="logo-div">
                <img src="~/images/logo.png" class="logo" />
            </div>
            <form asp-controller="Login" asp-action="Index" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Senha"></label>
                    <input asp-for="Senha" type="password" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="d-flex mt-2 justify-content-between">
                    <a class="btn btn-light" asp-action="Index" asp-controller="/">Voltar</a>
                    <button type="submit" class="btn btn-brown">Login</button>
                </div>

            </form>
            <div class="row">
                <div class="d-flex justify-content-center mt-2">
                    <span class="register">
                        Ainda não cadastrou? Clique&nbsp;<a asp-action="Cadastrar" asp-controller="Login">aqui</a>
                    </span>
                </div>
            </div>

        </div>
    </div>
</div>