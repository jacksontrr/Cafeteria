@model IEnumerable<Cafeteria.Models.Administrador>

@{
    ViewData["Title"] = "Listar Administradores";
}


<h1 class="title-center">Listar Administradores</h1>

<!-- Barra de pesquisa para administradores -->

<div class="row">
    <div class="col-md-12">
        <form asp-action="Search" asp-controller="Administradores" method="get">
            <div class="search mb-3">
                <div class="input-group">
                    <input type="text" class="search-input form-control" name="search" placeholder="Pesquisar" aria-label="Pesquisar" aria-describedby="button-addon2" value="">
                    <div class="search-finishing">
                        <button class="search-button btn btn-padding btn-rounded" type="submit" id="search-send"><i class="fas fa-search"></i></button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="text-center">
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        <a asp-action="Cadastrar" style="color: white"><i class="fas fa-plus"></i></a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                            <a asp-action="Deletar" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>