@model IEnumerable<Cafeteria.ViewModels.ProdutoViewModel>
@{
    ViewData["Title"] = "Listar Produtos";
}

<link rel="stylesheet" href="~/css/ListarProdutos.css" asp-append-version="true" />

<h1 class="title-center">Lista Produtos</h1>

<!-- Criar uma lista de produtos em row card -->

<div class="row">
    <div class="col-md-12">
        <form asp-action="Pesquisar" asp-controller="Clientes" method="get">
            <div class="search mb-3">
                <div class="input-group">
                    <input type="text" class="search-input form-control" name="nome" placeholder="Pesquisar" aria-label="Pesquisar" aria-describedby="button-addon2" value="@(ViewBag.CurrentFilter ?? "")">
                    <div class="search-finishing">
                        <button class="search-button btn btn-padding btn-rounded" type="submit" id="search-send"><i class="fas fa-search"></i></button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="text-center">
                    <th>Imagem</th>
                    <th>Nome Produto</th>
                    <th>Descrição</th>
                    <th>Preço</th>
                    <th>
                        <a asp-action="Cadastrar" style="color: white"><i class="fas fa-plus"></i></a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>
                            <img src="~/images/product/@Html.DisplayFor(modelItem => item.Imagem)" class="table-img" alt="@Html.DisplayFor(modelItem => item.Nome)">
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Preco)
                        </td>
                        <td>
                            <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                            <a asp-action="Deletar" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

