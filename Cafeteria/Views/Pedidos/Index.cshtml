@model IEnumerable<Cafeteria.Models.Pedido>
@{
    ViewData["Title"] = "Pedidos";
    List<Cafeteria.Models.Pedido> pedidos = Model.ToList();
}
<link rel="stylesheet" href="~/css/Pedido.css" asp-append-version="true" />

<h2 class="d-flex d-md-block justify-content-center align-items-center">Pedidos</h2>
@for (int i = 0; i < pedidos.Count; i++)
{
    <h3># @(i + 1) - @Html.DisplayFor(modelItem => pedidos[i].Status)</h3>
    <div class="row">
        @foreach (var item2 in pedidos[i].PedidoProdutos.ToList())
        {
            <div class="col-12 col-md-4">
                <div class="card bg-brown mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">
                                <img src="~/images/product/@Html.DisplayFor(modelItem => item2.Produto.Imagem)" class="card-img-product" alt="@Html.DisplayFor(modelItem => item2.Produto.Nome)">
                            </div>
                            <div class="col-9">
                                <div class="d-flex justify-content-between align-items-center h-100 ">
                                    <span class="d-flex justify-content-center align-items-center">@Html.DisplayFor(modelItem => item2.Produto.Nome)</span>
                                    <span class="d-flex justify-content-center align-items-center">@Html.DisplayFor(modelItem => item2.Produto.Preco)</span>
                                    <span class="justify-content-center align-items-center">Q:@Html.DisplayFor(modelItem => item2.Quantidade)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script src="~/js/Pedidos.js" asp-append-version="true"></script>
}